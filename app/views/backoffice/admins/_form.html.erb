<% if @admin.errors.any? %>
	<div class="alert alert-danger alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		 <% @admin.errors.full_messages.each do |error| %>
		 		<ul>
		 			<li><%= t(error) %></li>
		 		</ul>
		 <% end %>
	</div>
<% end %> 

<%= form_for([:backoffice, @admin]) do |f| %>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Nome</label>
            <%= f.text_field :name, class: "form-control" %>
        </div>

       <% if policy(@admin).edit? %> 
            <div class="form-group">
                <label>Tipo de Acesso</label><br>
                <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |btn| %>
                    <div class="radio">
                     <%= btn.label {btn.radio_button + btn.text} %>
                    </div>
                <% end %>
            </div>
        <% end %>

        <div class="form-group">
            <label>Email</label>
            <%= f.email_field :email, class: "form-control", placeholder:"EMAIL VÁLIDO" %>
        </div>

        <div class="form-group">
            <label>SENHA</label>
            <%= f.password_field :password, class: "form-control", placeholder:"SENHA E-MAIL" %>
        </div>

        <div class="form-group">
            <label>CONFIRMACÂO</label>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder:"CONFIRMAR SENHA" %>
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
<% end %>  