
<h1 class="page-header">USUÁRIOS - ADMINS</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        Lista de ADMINS CADASTRADOS ativas
        <%= link_to  new_backoffice_admin_path  do %>
	        <button type="button" class="btn btn-success btn-circle pull-right", style="margin-top: -5px; "><i class="fa fa-plus"></i>
	        </button>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Descrição</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @admins.each do |admin| %>
                    <tr>
                        <td><%= admin.id %></td>
                        <td><%= admin.email %></td>
                        <td class="col-md-2 text text-center">
                            <%= link_to   edit_backoffice_admin_path(admin) do %>
                                <button type="button" class="btn btn-primary btn-circle">
                                    <i class="fa fa-edit"></i>
                                </button>
                            <% end %>
                            
                            <%= link_to   backoffice_admin_path(admin), method: :delete do %>
                                <button type="button" class="btn btn-danger btn-circle">
                                    <i class="fa fa-minus"></i>
                                </button>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->
            