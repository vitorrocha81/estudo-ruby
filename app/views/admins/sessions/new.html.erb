<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Por favor, logar-se</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for(resource, as: resource_name, url:   new_session_path(resource_name, role: "form")) do |f| %>
                            <fieldset>
                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail", type:"email"%>
                                </div>
                                <div class="form-group">
                                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                                </div>
                                <div class="checkbox">
                                    <% if devise_mapping.rememberable? -%>
                                        <label>
                                          <%= f.check_box :remember_me %>Remember-me
                                        </label>
                                    <% end -%>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                  <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
                            </fieldset>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

